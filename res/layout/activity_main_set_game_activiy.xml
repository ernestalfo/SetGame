<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linux_001"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainSetGameActiviy" >

    <Button
        android:id="@+id/bttnSG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Single Player"
        android:textColor="@color/mwhite" />

    <Button
        android:id="@+id/bttnMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bttnSG"
        android:layout_alignRight="@+id/bttnSG"
        android:layout_below="@+id/bttnSG"
        android:text="  Multiplayer  "
        android:textColor="@color/mwhite" />

    <Button
        android:id="@+id/bttnAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bttnMP"
        android:layout_alignRight="@+id/bttnMP"
        android:layout_below="@+id/bttnMP"
        android:text="About"
        android:textColor="@color/mwhite" />

    <Button
        android:id="@+id/bttnHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bttnAbout"
        android:layout_alignRight="@+id/bttnAbout"
        android:layout_below="@+id/bttnAbout"
        android:text="Help"
        android:textColor="@color/mwhite" />

</RelativeLayout>